  box-shadow: var(--shadow-sm);
}

.btn-share:hover:not(:disabled) {
  background-color: #7C3AED;
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.btn-share:active:not(:disabled) {
  transform: translateY(0);
  box-shadow: var(--shadow-sm);
}

.btn-share:focus {
  outline: 2px solid #8B5CF6;
  outline-offset: 2px;
}

/* Back Button Styling */
